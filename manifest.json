{
  "name": "GitHub Productivity Dashboard",
  "description": "Track your GitHub productivity with insights on commits, PRs, reviews, and more. Beautiful analytics in a side panel.",
  "version": "3.0.0",
  "manifest_version": 3,

  "permissions": [
    "storage",
    "tabs",
    "sidePanel"
  ],

  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],

  "background": {
    "service_worker": "src/sw.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },

  "action": {
    "default_title": "Open GitHub Productivity Dashboard",
    "default_icon": "icon.png"
  },

  "icons": {
    "128": "icon.png"
  }
}