{
  "name": "GitHub Productivity Dashboard",
  "description": "Product-like GitHub productivity dashboard in a Chrome side panel.",
  "version": "2.0.0",
  "manifest_version": 3,

  "permissions": ["storage", "tabs", "sidePanel"],
  "host_permissions": ["https://api.github.com/*"],

  "background": {
    "service_worker": "src/sw.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },

  "action": {
    "default_title": "Open GitHub Dashboard"
  }
}
